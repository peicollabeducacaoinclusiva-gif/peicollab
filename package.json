{
  "name": "pei-collab-monorepo",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "description": "PEI Collab - Sistema Integrado de Gestão Educacional Inclusiva",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:pei": "turbo run dev --filter=@pei/pei-collab",
    "dev:gestao": "turbo run dev --filter=@pei/gestao-escolar",
    "dev:aee": "turbo run dev --filter=@pei/plano-aee",
    "test": "turbo run test",
    "test:unit": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "jest tests/accessibility",
    "test:accessibility:watch": "jest tests/accessibility --watch",
    "test:accessibility:ci": "jest tests/accessibility --ci --coverage",
    "test:sso": "node scripts/test-sso-simple.js",
    "test:sso:manual": "echo 'Consulte scripts/test-sso-manual.md para instruções de teste manual'",
    "test:exceljs": "tsx scripts/test-exceljs-migration.ts",
    "test:jspdf": "tsx scripts/test-jspdf-3.ts",
    "analyze:bundle": "node scripts/analyze-bundle.js"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.8.2",
    "@types/jest": "^29.5.0",
    "exceljs": "^4.4.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "puppeteer": "^23.11.1",
    "tsx": "^4.20.6",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "18.3.26",
      "@types/react-dom": "18.3.7",
      "tailwindcss": "3.4.18",
      "@supabase/supabase-js": "2.84.0",
      "react-hook-form": "7.50.0",
      "@hookform/resolvers": "3.3.4",
      "sonner": "1.7.4",
      "tailwind-merge": "2.2.1"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0"
  }
}
